<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.johndoe.casatourism.Notes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Delete"
            android:id="@+id/button_deletenote"
            android:onClick="onNoteDelete"/>
        <Spinner
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#ffffb5"
            android:layout_weight="1.03" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:id="@+id/button_savenote"
            android:onClick="onNoteSave"/>

    </LinearLayout>
    <view xmlns:android="http://schemas.android.com/apk/res/android"
        class="com.johndoe.mtourismbeta.LinedEditText"
        android:id="@+id/editText_note"
        android:background="#ffffb3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:gravity="top"
        android:textSize="22sp"
        android:capitalize="sentences" />


</LinearLayout>
