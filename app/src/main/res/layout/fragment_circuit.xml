<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.johndoe.mtourismbeta.CircuitFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.johndoe.casatourism.Circuits">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Circuit Corniche"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/circuit1"
            android:src="@drawable/circuit1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Circuit Centre Ville"
            android:id="@+id/textView3"

            android:textSize="20dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/circuit2"

            android:src="@drawable/circuit2" />
    </LinearLayout>


</FrameLayout>
